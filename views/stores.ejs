<style>
  table,
  th,
  td {
    border: 1px solid black;
  }
</style>
<h1>Stores</h1>
<a href="/add-store">Add Store</a>

<table>
  <thead>
    <tr>
      <th>SID</th>
      <th>Location</th>
      <th>MANAGER ID</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% stores.forEach(function(store) { %>
      <tr>
        <td>
          <%= store.sid %>
        </td>
        <td>
          <%= store.location %>
        </td>
        <td>
          <%= store.mgrid %>
        </td>
        <td>
          <a href="/stores/edit-store/<%= store.sid %>">Update</a>
        </td>
      </tr>
      <% }); %>
  </tbody>
</table>

<a href="/">Home</a>